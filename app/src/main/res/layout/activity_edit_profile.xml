<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".componentActivity.EditProfileActivity">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_centerInParent="true"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_centerInParent="true"
            android:textColor="@color/main_text"
            android:textSize="18dp"
            android:layout_marginHorizontal="60dp" />
    </RelativeLayout>

    <!-- Divider Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sub_text"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="3dp"/>

    <!-- Scrollable Form Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_margin="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Details"
                android:textColor="@color/main_text"
                android:textSize="23sp"
                android:layout_marginVertical="12dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp" />
            <!-- Service Name Input -->
            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bg"
                android:hint="Enter full Name"
                android:textSize="16sp"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/sub_text"
                android:textColorHint="@color/sub_text" />

            <!-- Time Required Input -->
            <EditText
                android:id="@+id/proper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bg"
                android:hint="Address"
                android:textSize="16sp"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/sub_text"
                android:textColorHint="@color/sub_text"  />

            <!-- Warranty Input -->
            <EditText
                android:id="@+id/alterPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bg"
                android:hint="Alternate Mobile"
                android:textSize="16sp"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/sub_text"
                android:textColorHint="@color/sub_text"  />

            <!-- Recommendation Time Input -->
            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_bg"
                android:hint="Date of Birth"
                android:textSize="16sp"
                android:inputType="date"
                android:padding="15dp"
                android:textColor="@color/sub_text"
                android:textColorHint="@color/sub_text"  />

            <!-- Number of Services Input -->


            <!-- Update Button -->
            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:textColor="@color/button_text"
                android:textColorHint="@color/sub_text"
                android:backgroundTint="@color/button_bg"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
