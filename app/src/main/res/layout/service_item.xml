<!-- res/layout/item_firestore.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8686AC"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/serviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0F0E47"
        android:text="Regular Ac"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/timeRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Text 3"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/warranty"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Text 4"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/recommendationTime"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Text 6"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/numberOfServices"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Text 5"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/serviceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/almond"
        android:text="Text 2"
        android:textSize="16sp" />








</LinearLayout>
