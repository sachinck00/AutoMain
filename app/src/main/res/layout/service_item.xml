<!-- res/layout/item_firestore.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_border"
    android:orientation="vertical"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="9dp"
    android:padding="15dp">

    <TextView
        android:id="@+id/serviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/almond"
        android:paddingVertical="5dp"
        android:paddingHorizontal="4dp"
        android:text="Regular Ac"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timeRequired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Text 3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/warranty"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Text 4"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/recommendationTime"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Text 6"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/numberOfServices"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Text 5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/serviceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/almond"
        android:text="Text 2"
        android:textSize="14sp" />








</LinearLayout>
